---
import { Icon } from 'astro-icon/components';


interface Props {
  name: string;
  icon?: string;
  class?: string;
}

const { name, icon, class: className } = Astro.props;
---

<div
  class:list={[
    "group relative inline-flex p-[1px] rounded-full overflow-hidden transition-all duration-300",
    "bg-zinc-200/50 dark:bg-zinc-800/50",
    "hover:from-indigo-500 hover:via-fuchsia-500 hover:to-cyan-400 hover:bg-gradient-to-r",
    "hover:shadow-[0_0_20px_rgba(168,85,247,0.4)]",
    className
  ]}
>
  <div class="relative flex items-center gap-2 px-3 py-1.5 rounded-full bg-zinc-50 dark:bg-zinc-950 text-[11px] font-bold tracking-wider text-zinc-500 dark:text-zinc-400 transition-all duration-300 group-hover:bg-white dark:group-hover:bg-zinc-900 group-hover:text-zinc-900 dark:group-hover:text-white">
    {icon && <Icon name={icon} class="w-3.5 h-3.5 transition-all duration-300 group-hover:scale-110 group-hover:text-indigo-500 dark:group-hover:text-cyan-400" />}
    <span>{name}</span>
  </div>
</div>